	bisb	(R2)+, R0
	swab	R0
	bisb	(R1)+, R0
	mov	R0, (R5)
	inc	(R4)
	clr	R0
	bisb	(R2)+, R0
	swab	R0
	bisb	(R1)+, R0
	mov	R0, (R5)
	add	#BUFWID-2, R1
	add	#BUFWID-2, R2
	add	#SCRWID-1, (R4)
	sob	R3, 30$
