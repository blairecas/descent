; object structure for enemies
; [b subtype][b type], [b arg#1][b spr], [w x], [w y]
; X, Y - only low byte used, high bytes are flags

; enemies (spiders, bats etc.)
; R0=addr of object structure, R1=type*2 (TOBJ_ENEMY*2), R2=subtype
ProcObjEnemy:
	mov	R0, R5
	asl	R2
	call	@EnemySubProcTable(R2)
	return

EnemySubProcTable:
	.word	ProcSpider1

; === generic spider 1 ===
; try to move in direction of face (forward)
; if unable to move - turn around 
; try to fall down (have weight=2, normal falling)
; repeat
; R5 = obj struct addr
ProcSpider1:
	; set sprite 
	mov	2(R5), R0			; arg#1 | spr#
	clr	R3
	rol	R0				; get direction bit in C
	rol	R3				; set direction bit
	asl	R3
	add	#24., R3			; get base sprite #
	mov	FrameCount, R4			; add animation
	bic	#^B1111111111111101, R4
	asr	R4
	bis	R4, R3
	movb	R3, 2(R5)
	; Y-movement (falling)
	mov	6(R5), R2			; R2 = Y
	cmp	R2, #FieldDY*16.-16.		; test for out of screen
	bge	10$				; skip falling then
	mov	4(R5), R1			; R1 = X
	add	#4, R2				; Y+4
	call	CheckAvail			; check for avail down
	bcs	10$				; 
	add	#4, 6(R5)			; Y=Y+4
10$:	mov	4(R5), R1
	mov	6(R5), R2
	; X-movement
	bit	#^B1000000000000000, 2(R5)	; check moving direction
	bne	50$
	; move right
	cmp	R1, #FieldDX*16.-18.		; right screen boundary -2px
	bge	18$
	inc	R1
	inc	R1	
	call	CheckAvail
	bcc	20$
18$:	bis	#^B1000000000000000, 2(R5)	; change direction to 'left'
	return
20$:	add	#2, 4(R5)
	return
50$:	; move left
	cmp	R1, #2				; left screen boundary +2px
	ble	58$
	dec	R1
	dec	R1
	call	CheckAvail
	bcc	60$
58$:	bic	#^B1000000000000000, 2(R5)
	return
60$:	sub	#2, 4(R5)
	return



