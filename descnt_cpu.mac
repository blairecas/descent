; process object item - set sprite (TODO: need to set just once?) and check for collisions with player
; R0=addr of obj, R2=subtype=item #
ProcObjItem:
	; test collision with player
	mov	4(R0), R4
	mov	playerX, R5
	call	100$
	bcc	99$
	mov	6(R0), R4
	mov	playerY, R5
