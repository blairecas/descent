; word to string in decimal xxxxx, R0-word, R5-str addr
DecToStr:
	mov	#5, R3
	add	R3, R5
1$:	mov	R0, R1
	clr	R0
	div	#10., R0
	add	#'0, R1
	movb	R1, -(R5)
	sob	R3, 1$
